
<form name='createForum'>
<fieldset>
  <legend>Раздел:</legend>
  <input type='radio' id='partsList' name='partMethod' value='selectPart' checked>
    <label for='partsList'>Выбрать раздел:
      <select name='parts'>
      {{#each parts}}
        <option>{{this.partName}}</option>
      {{/each}}
      </select>
    </label><br />

  <input type='radio' id='newPart' name='partMethod' value='addPart'>
    <label for='newPart'><span>Создать раздел: </span>
      <input type='text' name='addPart' />
    </label><br />
</fieldset>

<fieldset>
  <legend>Новый форум:</legend>
  <span>URN форума:</span>
  <input type='text' name='forumURN' /><br />
  <span>Название форума:</span>
  <input type='text' name='forumName' /><br />
</fieldset>
<fieldset>

<span>Название темы: </span>     <input type="text" name="theme" /><br />
<span>Описание:    </span>        <input type="text" name="comment" /><br />
<span>Сообщение: </span><br />
<textarea name="firstPost"></textarea><br />

</fieldset>

<input type='button' name='addForum' id = 'addForum' value='Создать' /><br />
</form>
<a href='/'>...к списку форумов</a>

